@model VideotekaApp.Models.Film

@{
    ViewData["Title"] = "Smazat film";

}

<h1>@ViewData["Title"]</h1>

<h4>Opravdu chcete smazat tento film?</h4>

<div>
    <h5>@Model.Title</h5>
    <dl class="row">
        <dt class = "col-sm-2">Rok vydání</dt>
        <dd class = "col-sm-10">@Model.ReleaseYear</dd>
        <dt class = "col-sm-2">Žánr</dt>
        <dd class = "col-sm-10">@Model.Genre</dd>
        <dt class = "col-sm-2">Hodnocení</dt>
        <dd class = "col-sm-10">@Model.Rating</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.ID" method="post">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Ano, smazat</button>   <button type="submit" class="btn btn-danger" a asp-action="Index">Zrušit</button>
</form>
